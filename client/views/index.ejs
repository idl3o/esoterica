<%
// Build body content â€” zeitgeist HTML is already a string from marked.parse()
var css = `<style>
.zeitgeist-header {
    text-align: center;
    padding: 3rem 2rem 1rem;
}
.zeitgeist-date {
    font-size: 0.9rem;
    color: #888;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
}
.zeitgeist-title {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #00d4ff 0%, #9d4edd 50%, #00ff88 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}
.zeitgeist-subtitle {
    color: #888;
    font-style: italic;
    font-size: 1.1rem;
}
.zeitgeist-tabs {
    display: flex;
    gap: 0;
    max-width: 900px;
    margin: 2rem auto 0;
    padding: 0 2rem;
    border-bottom: 2px solid rgba(0, 212, 255, 0.2);
}
.zeitgeist-tab {
    padding: 1rem 2rem;
    background: transparent;
    border: none;
    color: #666;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s;
    border-bottom: 3px solid transparent;
    font-family: inherit;
    letter-spacing: 0.15em;
    text-transform: uppercase;
}
.zeitgeist-tab.active {
    color: #00d4ff;
    border-bottom-color: #00d4ff;
}
.zeitgeist-tab:hover:not(.active) {
    color: #aaa;
}
.zeitgeist-content {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
}
.zeitgeist-panel {
    display: none;
}
.zeitgeist-panel.active {
    display: block;
}
.zeitgeist-content h1 {
    display: none;
}
.zeitgeist-content h2 {
    color: #00d4ff;
    font-size: 1.6rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid rgba(0, 212, 255, 0.2);
}
.zeitgeist-content h3 {
    color: #9d4edd;
    font-size: 1.2rem;
    margin-top: 1.8rem;
    margin-bottom: 0.75rem;
}
.zeitgeist-content p {
    margin-bottom: 1rem;
    line-height: 1.8;
}
.zeitgeist-content ul, .zeitgeist-content ol {
    margin: 1rem 0 1rem 1.5rem;
    line-height: 1.8;
}
.zeitgeist-content li {
    margin-bottom: 0.75rem;
}
.zeitgeist-content strong {
    color: #00ff88;
}
.zeitgeist-content em {
    color: #c4a0e8;
}
.zeitgeist-content hr {
    border: none;
    border-top: 2px solid rgba(0, 212, 255, 0.15);
    margin: 2.5rem 0;
}
.zeitgeist-content blockquote {
    border-left: 3px solid #9d4edd;
    background: rgba(157, 78, 221, 0.05);
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #aaa;
}
.zeitgeist-content a {
    color: #00d4ff;
    text-decoration: none;
    border-bottom: 1px solid rgba(0, 212, 255, 0.3);
}
.zeitgeist-content a:hover {
    color: #00ff88;
    border-bottom-color: #00ff88;
}
.zeitgeist-nav {
    max-width: 900px;
    margin: 3rem auto;
    padding: 0 2rem;
}
.zeitgeist-nav .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
}
.zeitgeist-nav .card {
    background: rgba(5, 5, 15, 0.8);
    border: 2px solid rgba(0, 212, 255, 0.2);
    border-radius: 10px;
    padding: 1.5rem;
    backdrop-filter: blur(15px);
    transition: all 0.3s;
}
.zeitgeist-nav .card:hover {
    border-color: rgba(0, 212, 255, 0.5);
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(0, 212, 255, 0.15);
}
.zeitgeist-nav .card h3 {
    color: #00d4ff;
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
}
.zeitgeist-nav .card p {
    color: #888;
    font-size: 0.95rem;
    margin-bottom: 1rem;
    line-height: 1.5;
}
.zeitgeist-nav .card a {
    color: #00d4ff;
    text-decoration: none;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
}
.zeitgeist-nav .card a:hover {
    color: #00ff88;
}
@media (max-width: 768px) {
    .zeitgeist-title { font-size: 1.8rem; }
    .zeitgeist-tabs { padding: 0 1rem; }
    .zeitgeist-tab { padding: 0.75rem 1.25rem; font-size: 0.9rem; }
    .zeitgeist-content { padding: 1.5rem 1rem; }
}
</style>`;

var navCards = `
<div class="zeitgeist-nav">
    <div class="grid">
        <div class="card">
            <h3>Fiction Bridges</h3>
            <p>Enter through the story you love. Consciousness technology extracted from narrative.</p>
            <a href="/bridges">Explore Bridges &rarr;</a>
        </div>
        <div class="card">
            <h3>The Oracle</h3>
            <p>You already know. Receive what you're remembering today.</p>
            <a href="/oracle">Enter &rarr;</a>
        </div>
        <div class="card">
            <h3>The Constellation</h3>
            <p>` + nodeCount + ` nodes mapping the consciousness technology network in 3D.</p>
            <a href="/explorer-3d">Explore &rarr;</a>
        </div>
    </div>
</div>`;

var tabScript = `
<script>
function switchTab(tab) {
    document.querySelectorAll('.zeitgeist-tab').forEach(function(t) { t.classList.remove('active'); });
    document.querySelectorAll('.zeitgeist-panel').forEach(function(p) { p.classList.remove('active'); });
    document.querySelector('[data-tab="' + tab + '"]').classList.add('active');
    document.getElementById('panel-' + tab).classList.add('active');
    window.scrollTo({ top: 0, behavior: 'smooth' });
}
<\/script>`;

var body;

if (zeitgeist && zeitgeist.zeit) {
    var geistPanel = zeitgeist.geist
        ? '<div id="panel-geist" class="zeitgeist-panel">' + zeitgeist.geist + '</div>'
        : '';

    body = css +
        '<div class="zeitgeist-header">' +
        '    <div class="zeitgeist-date">' + zeitgeist.displayDate + '</div>' +
        '    <h1 class="zeitgeist-title">What Is Actually Happening</h1>' +
        '    <p class="zeitgeist-subtitle">Reality, read through signal and silence</p>' +
        '</div>' +
        '<div class="zeitgeist-tabs">' +
        '    <button class="zeitgeist-tab active" data-tab="zeit" onclick="switchTab(\'zeit\')">The Zeit</button>' +
        (zeitgeist.geist ? '    <button class="zeitgeist-tab" data-tab="geist" onclick="switchTab(\'geist\')">The Geist</button>' : '') +
        '    <a href="/zeitgeist" style="margin-left: auto; padding: 1rem; color: #666; text-decoration: none; font-size: 0.85rem; letter-spacing: 0.1em; text-transform: uppercase; align-self: center;">Archive &rarr;</a>' +
        '</div>' +
        '<div class="zeitgeist-content">' +
        '    <div id="panel-zeit" class="zeitgeist-panel active">' + zeitgeist.zeit + '</div>' +
        geistPanel +
        '</div>' +
        navCards +
        tabScript;
} else {
    body = `
    <div class="hero">
        <h1>Esoterica</h1>
        <p>Consciousness technology. Fiction bridges. A living reading of reality.</p>
        <div style="margin-top: 2rem;">
            <a href="/bridges" class="btn">Fiction Bridges</a>
            <a href="/oracle" class="btn" style="margin-left: 1rem;">Oracle</a>
            <a href="/explorer-3d" class="btn" style="margin-left: 1rem;">Constellation</a>
        </div>
    </div>`;
}
%>
<%- include('layout', { title: title, body: body }) %>
