<%
var body = `
<style>
.archive-header {
    text-align: center;
    padding: 3rem 2rem 1rem;
}
.archive-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #00d4ff 0%, #9d4edd 50%, #00ff88 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}
.archive-header p {
    color: #888;
    font-style: italic;
    font-size: 1.1rem;
}
.archive-list {
    max-width: 800px;
    margin: 2rem auto;
    padding: 0 2rem;
}
.archive-issue {
    display: block;
    background: rgba(5, 5, 15, 0.8);
    border: 2px solid rgba(0, 212, 255, 0.15);
    border-left: 4px solid #00d4ff;
    border-radius: 0 10px 10px 0;
    padding: 1.5rem 1.5rem 1.5rem 2rem;
    margin-bottom: 1.5rem;
    backdrop-filter: blur(15px);
    transition: all 0.3s;
    text-decoration: none;
    color: inherit;
}
.archive-issue:hover {
    border-color: rgba(0, 212, 255, 0.5);
    border-left-color: #00ff88;
    transform: translateX(4px);
    box-shadow: 0 4px 20px rgba(0, 212, 255, 0.15);
}
.archive-issue-date {
    font-size: 0.85rem;
    color: #888;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
}
.archive-issue-headline {
    color: #00d4ff;
    font-size: 1.15rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    line-height: 1.3;
}
.archive-issue-summary {
    color: #aaa;
    font-size: 0.9rem;
    line-height: 1.6;
}
.archive-issue-badges {
    margin-top: 0.75rem;
    display: flex;
    gap: 0.5rem;
}
.archive-badge {
    font-size: 0.75rem;
    padding: 0.2rem 0.6rem;
    border-radius: 3px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
}
.archive-badge-zeit {
    background: rgba(0, 212, 255, 0.1);
    color: #00d4ff;
    border: 1px solid rgba(0, 212, 255, 0.3);
}
.archive-badge-geist {
    background: rgba(157, 78, 221, 0.1);
    color: #9d4edd;
    border: 1px solid rgba(157, 78, 221, 0.3);
}
@media (max-width: 768px) {
    .archive-header h1 { font-size: 1.8rem; }
    .archive-list { padding: 0 1rem; }
}
</style>

<div class="archive-header">
    <h1>Zeitgeist Archive</h1>
    <p>A record of how reality was reading, moment by moment</p>
</div>

<div class="archive-list">
` +
(archive.length === 0
  ? '<p style="text-align: center; color: #888;">No readings yet.</p>'
  : archive.map(function(reading) {
    return '<a class="archive-issue" href="/zeitgeist/' + reading.date + '">' +
        '<div class="archive-issue-date">' + reading.displayDate + '</div>' +
        (reading.headline ? '<div class="archive-issue-headline">' + reading.headline + '</div>' : '') +
        (reading.summary ? '<div class="archive-issue-summary">' + reading.summary + '</div>' : '') +
        '<div class="archive-issue-badges">' +
        '    <span class="archive-badge archive-badge-zeit">zeit</span>' +
        (reading.hasGeist ? '    <span class="archive-badge archive-badge-geist">geist</span>' : '') +
        '</div>' +
        '</a>';
  }).join('\\n')
) +
`
</div>
`;
%>
<%- include('layout', { title: title, body: body }) %>
