<%
var css = `<style>
.wander-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
}

.wander-header {
    text-align: center;
    margin-bottom: 2rem;
}

.wander-title {
    font-size: 1rem;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: 0.5rem;
}

.wander-subtitle {
    color: #666;
    font-size: 0.9rem;
    font-style: italic;
}

.current-node {
    background: rgba(5, 5, 15, 0.9);
    border: 2px solid rgba(0, 255, 136, 0.3);
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 2rem;
    text-align: center;
}

.current-node-title {
    font-size: 2rem;
    color: #00ff88;
    margin-bottom: 0.5rem;
    text-transform: capitalize;
}

.current-node-meta {
    color: #888;
    margin-bottom: 1rem;
}

.current-node-meta code {
    color: #9d4edd;
}

.current-node-essence {
    font-size: 1.2rem;
    color: #aaa;
    font-style: italic;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: rgba(0, 255, 136, 0.05);
    border-left: 3px solid #00ff88;
}

.current-node-link {
    display: inline-block;
    color: #00d4ff;
    text-decoration: none;
    font-size: 0.9rem;
}

.current-node-link:hover {
    color: #00ff88;
}

.connections-section {
    margin-bottom: 2rem;
}

.connections-title {
    color: #9d4edd;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
    text-align: center;
}

.connections-hint {
    text-align: center;
    color: #666;
    font-size: 0.85rem;
    margin-bottom: 1rem;
}

.connections-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: center;
}

.connection-btn {
    display: inline-block;
    padding: 0.6rem 1.2rem;
    background: rgba(157, 78, 221, 0.1);
    border: 1px solid rgba(157, 78, 221, 0.3);
    border-radius: 20px;
    color: #9d4edd;
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s;
    text-transform: capitalize;
}

.connection-btn:hover {
    background: rgba(157, 78, 221, 0.2);
    border-color: rgba(157, 78, 221, 0.6);
    color: #00d4ff;
    transform: scale(1.05);
}

.documents-section {
    margin-bottom: 2rem;
}

.documents-title {
    color: #00d4ff;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
    text-align: center;
}

.documents-grid {
    display: grid;
    gap: 1rem;
}

.doc-link {
    display: block;
    padding: 1rem;
    background: rgba(0, 212, 255, 0.05);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s;
}

.doc-link:hover {
    background: rgba(0, 212, 255, 0.1);
    border-color: rgba(0, 212, 255, 0.4);
}

.doc-link-title {
    color: #e0e0e0;
    font-size: 0.95rem;
    margin-bottom: 0.25rem;
}

.doc-link-meta {
    color: #666;
    font-size: 0.8rem;
}

.wander-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.action-btn {
    padding: 0.75rem 1.5rem;
    background: rgba(0, 212, 255, 0.1);
    border: 2px solid rgba(0, 212, 255, 0.3);
    border-radius: 8px;
    color: #00d4ff;
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s;
}

.action-btn:hover {
    background: rgba(0, 212, 255, 0.2);
    border-color: #00d4ff;
}

.action-btn.primary {
    background: rgba(0, 255, 136, 0.1);
    border-color: rgba(0, 255, 136, 0.3);
    color: #00ff88;
}

.action-btn.primary:hover {
    background: rgba(0, 255, 136, 0.2);
    border-color: #00ff88;
}

.path-display {
    text-align: center;
    margin-top: 2rem;
    color: #666;
    font-size: 0.85rem;
}

.path-display span {
    color: #888;
}
</style>`;

// Build connections HTML
var connectionsHtml = '';
if (connections && connections.length > 0) {
    connectionsHtml = '<div class="connections-section">' +
        '<div class="connections-title">Continue Walking</div>' +
        '<div class="connections-hint">Click any connection to move there</div>' +
        '<div class="connections-grid">';

    connections.forEach(function(c) {
        connectionsHtml += '<a href="/wander?start=' + c.id + '" class="connection-btn">' + c.id.replace(/_/g, ' ') + '</a>';
    });

    connectionsHtml += '</div></div>';
} else {
    connectionsHtml = '<p style="text-align: center; color: #888;">No connections from this node</p>';
}

// Build documents HTML
var documentsHtml = '';
if (linkedDocuments && linkedDocuments.length > 0) {
    documentsHtml = '<div class="documents-section">' +
        '<div class="documents-title">Documents Here (' + linkedDocuments.length + ')</div>' +
        '<div class="documents-grid">';

    linkedDocuments.slice(0, 5).forEach(function(doc) {
        documentsHtml += '<a href="/read/' + doc.path + '" class="doc-link">' +
            '<div class="doc-link-title">' + doc.title + '</div>' +
            '<div class="doc-link-meta">' + doc.source + ' Â· ' + doc.readingTime + ' min</div>' +
            '</a>';
    });

    documentsHtml += '</div></div>';
}

// Build random connection link
var randomConnectionHtml = '';
if (connections && connections.length > 0) {
    var randomIdx = Math.floor(Math.random() * connections.length);
    randomConnectionHtml = '<a href="/wander?start=' + connections[randomIdx].id + '" class="action-btn">Random Connection</a>';
}

var nodeTitle = node.id.replace(/_/g, ' ');
var nodeEssence = (node.essence || 'No essence').replace(/_/g, ' ');

var body = css +
'<div class="wander-container">' +
'    <div class="wander-header">' +
'        <div class="wander-title">Random Walk</div>' +
'        <div class="wander-subtitle">Follow the connections. Discover what finds you.</div>' +
'    </div>' +
'    <div class="current-node">' +
'        <h1 class="current-node-title">' + nodeTitle + '</h1>' +
'        <div class="current-node-meta"><code>' + node.type + '</code></div>' +
'        <div class="current-node-essence">"' + nodeEssence + '"</div>' +
'        <a href="/node/' + node.id + '" class="current-node-link">View full node &rarr;</a>' +
'    </div>' +
     connectionsHtml +
     documentsHtml +
'    <div class="wander-actions">' +
'        <a href="/wander" class="action-btn primary">New Random Start</a>' +
         randomConnectionHtml +
'        <a href="/" class="action-btn">Return to Arrival</a>' +
'    </div>' +
'</div>';
%>
<%- include('layout', { title: title, body: body }) %>
