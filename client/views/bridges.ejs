<%
var body = `
<style>
.bridges-hero {
    text-align: center;
    padding: 3rem 2rem 1rem;
}
.bridges-hero h1 {
    font-size: 2.5rem;
    margin-bottom: 0.75rem;
    background: linear-gradient(135deg, #00d4ff 0%, #9d4edd 50%, #00ff88 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}
.bridges-hero p {
    color: #888;
    font-size: 1.1rem;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
}
.bridges-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 1.5rem;
    max-width: 1200px;
    margin: 2rem auto;
    padding: 0 2rem;
}
.bridge-card {
    background: rgba(5, 5, 15, 0.8);
    border: 2px solid rgba(0, 212, 255, 0.15);
    border-radius: 10px;
    padding: 1.5rem;
    backdrop-filter: blur(15px);
    transition: all 0.3s;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
}
.bridge-card:hover {
    border-color: rgba(0, 212, 255, 0.5);
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(0, 212, 255, 0.15);
}
.bridge-card h3 {
    color: #00d4ff;
    font-size: 1.15rem;
    margin-bottom: 0.25rem;
    line-height: 1.3;
}
.bridge-card .bridge-subtitle {
    color: #9d4edd;
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
    font-style: italic;
}
.bridge-card .bridge-quote {
    color: #aaa;
    font-size: 0.9rem;
    font-style: italic;
    line-height: 1.5;
    margin-bottom: 1rem;
    flex-grow: 1;
    border-left: 2px solid rgba(157, 78, 221, 0.3);
    padding-left: 0.75rem;
}
.bridge-card .bridge-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.85rem;
    color: #666;
    border-top: 1px solid rgba(0, 212, 255, 0.1);
    padding-top: 0.75rem;
    margin-top: auto;
}
.bridge-card .bridge-meta .bridge-time {
    color: #888;
}
.bridge-card .bridge-enter {
    color: #00d4ff;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 0.8rem;
}
@media (max-width: 768px) {
    .bridges-hero h1 { font-size: 1.8rem; }
    .bridges-grid {
        grid-template-columns: 1fr;
        padding: 0 1rem;
    }
}
</style>

<div class="bridges-hero">
    <h1>Enter Through the Story You Love</h1>
    <p>Every great story encodes consciousness technology. These bridges extract what the narrative knows &mdash; and make it usable.</p>
</div>

<div class="bridges-grid">
` +
bridges.map(function(bridge) {
    var displayTitle = bridge.title.length > 80 ? bridge.title.substring(0, 77) + '...' : bridge.title;
    var displayQuote = bridge.quote ? (bridge.quote.length > 150 ? bridge.quote.substring(0, 147) + '...' : bridge.quote) : '';
    return '<a class="bridge-card" href="/bridges/' + bridge.slug + '">' +
        '<h3>' + displayTitle + '</h3>' +
        (bridge.subtitle ? '<div class="bridge-subtitle">' + bridge.subtitle + '</div>' : '') +
        (displayQuote ? '<div class="bridge-quote">' + displayQuote + '</div>' : '') +
        '<div class="bridge-meta">' +
        '    <span class="bridge-time">' + bridge.readingTime + ' min read &middot; ' + bridge.wordCount.toLocaleString() + ' words</span>' +
        '    <span class="bridge-enter">Enter &rarr;</span>' +
        '</div>' +
        '</a>';
}).join('\n') +
`
</div>
`;
%>
<%- include('layout', { title: title, body: body }) %>
